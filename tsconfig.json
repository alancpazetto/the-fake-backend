{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "module": "umd",
    "moduleResolution": "node",
    "target": "es5",
    "removeComments": true,
    "esModuleInterop": true,
    "rootDir": "source/",
    "outDir": "build/",
    "baseUrl": ".",
    "paths": {
      "enumerators/*": ["source/enumerators/*"],
      "interfaces/*": ["source/interfaces/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["source"]
}
